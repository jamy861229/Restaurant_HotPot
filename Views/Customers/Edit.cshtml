@model Restaurant.Models.CustomerView


@{
    ViewData["Title"] = "編輯會員資料";
}

<h2 class="mb-4">編輯會員資料</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="CustomerId" />
    
    <!-- 整個表單加上灰色背景 -->
    <div class="p-4 bg-light rounded shadow-sm">

        <!-- 帳號（不可編輯） -->
        <div class="mb-3">
            <label class="form-label text-warning fw-bold">帳號</label>
            <p class="form-control-plaintext">@Model.CustomerAccount</p>
        </div>

        <!-- 姓名 -->
        <div class="mb-3 position-relative">
            <label asp-for="CustomerName" class="form-label">姓名</label>
            <input asp-for="CustomerName" class="form-control  bg-white text-black" required>
            <i class="bi bi-pencil-fill position-absolute end-0 top-50 translate-middle-y me-3"></i>
        </div>

        <!-- 電話 -->
        <div class="mb-3 position-relative">
            <label asp-for="CustomerPhone" class="form-label">電話</label>
            <input asp-for="CustomerPhone" class="form-control  bg-white text-black" required>
            <i class="bi bi-pencil-fill position-absolute end-0 top-50 translate-middle-y me-3"></i>
        </div>

        <!-- Email -->
        <div class="mb-3 position-relative">
            <label asp-for="CustomerEmail" class="form-label">Email</label>
            <p class="form-control-plaintext">@Model.CustomerEmail</p>
            <i class="bi bi-pencil-fill position-absolute end-0 top-50 translate-middle-y me-3"></i>
        </div>

        <!-- 地址 -->
        <div class="mb-3 position-relative">
            <label asp-for="CustomerAddress" class="form-label">地址</label>
            <input asp-for="CustomerAddress" class="form-control bg-white text-black">
            <i class="bi bi-pencil-fill position-absolute end-0 top-50 translate-middle-y me-3"></i>
        </div>

        <!-- 按鈕 -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">更新資料</button>
            <a asp-action="Index" class="btn btn-secondary">取消</a>
        </div>

    </div>
</form>

