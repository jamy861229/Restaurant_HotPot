@model Restaurant.Dto.indexDto

@{
    ViewData["Title"] = "Index";
}

@*@model Restaurant.Models.Customer*@



<div class="container mt-4">
    <h2 class="text-center">會員專區</h2>

    <!-- 上方按鈕 -->
    <div class="d-flex justify-content-center mb-3">
        <a href="~/Order/Index_Order" class="btn btn-primary mx-2">訂餐</a>
        <a href="~/StoreInformation/StoreInformation" class="btn btn-secondary mx-2">訂位</a>
    </div>

    <!-- 會員資訊 -->
    <div class="card p-3 mb-4">
        <h4>會員資訊</h4>
        <a asp-action="Edit" asp-route-id="@Model.viewModel.CustomerId"  class="btn btn-secondary ">修改資料✏️</a>
        <p><strong>帳號:</strong> @Model.viewModel.CustomerAccount</p>
        <p><strong>姓名:</strong> @Model.viewModel.CustomerName</p>
        <p><strong>電話:</strong> @Model.viewModel.CustomerPhone</p>
        <p><strong>Email:</strong> @Model.viewModel.CustomerEmail</p>
        <p><strong>地址:</strong> @Model.viewModel.CustomerAddress</p>
    </div>

    <!-- 訂單紀錄 (包含訂位/訂餐) -->

    <div class="form-group">
    <label for="orderType">選擇服務類型</label>
    <select id="orderType" name="orderType" class="form-control">
        <option value="reserve">訂位</option>
        <option value="order">訂餐</option>
    </select>
</div>

<!-- 顯示訂位或訂餐資料的容器 -->
<div id="orderDetails">
    <!-- 預設顯示的資料區域 -->
</div>



    <h4>訂單紀錄</h4>
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>訂位者姓名</th>
                <th>電話</th>
                <th>人數</th>
                <th>店名</th>
                <th>店家地址</th>
                <th>訂位日期</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.RRIs)
            {  
                  <tr>  
                              <td>@order.ReservationName</td>  
                                  <td>@order.ReservationPhone</td>  
                                      <td>@order.ReservationPeople</td>  
                                          <td>@order.RestaurantName</td>  
                                              <td>@order.RestaurantAddress</td>  
                          <td>@order.ReservationDate.ToString("yyyy-MM-dd")</td>  
                          
                    @*<td>@order.Status</td>  *@
                  </tr>  
              } 
        </tbody>
    </table>
</div>



