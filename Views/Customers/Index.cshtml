@model Restaurant.Models.CustomerView

@{
    ViewData["Title"] = "Index";
}

@*@model Restaurant.Models.Customer*@



<div class="container mt-4">
    <h2 class="text-center">會員專區</h2>

    <!-- 上方按鈕 -->
    <div class="d-flex justify-content-center mb-3">
        <a href="/Order" class="btn btn-primary mx-2">訂餐</a>
        <a href="/Reservation" class="btn btn-secondary mx-2">訂位</a>
    </div>

    <!-- 會員資訊 -->
    <div class="card p-3 mb-4">
        <h4>會員資訊</h4>
        <p><strong>帳號:</strong> @Model.CustomerAccount</p>
        <p><strong>姓名:</strong> @Model.CustomerName</p>
        <p><strong>電話:</strong> @Model.CustomerPhone</p>
        <p><strong>Email:</strong> @Model.CustomerEmail</p>
        <p><strong>地址:</strong> @Model.CustomerAddress</p>
    </div>

    <!-- 訂單紀錄 -->
    <h4>訂單紀錄</h4>
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>訂單編號</th>
                <th>日期</th>
                <th>總金額</th>
                <th>狀態</th>
            </tr>
        </thead>
        <tbody>
