@model IEnumerable<Restaurant.Models.MenuView>

@{
    Layout = "_Layout";
    ViewData["Title"] = "菜單品鑑";
}
<link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" />


@* 內容區域 *@
<div class="col-md-9 mt-5"></div>
@* 創建div元素，設置class為 text-center，將內容置中對齊 *@
<div class="text-center">
    @* 創建h1標題元素，設置class為 display-4，設置標題文本 *@
    <h2 class="display-4">老饕必吃 — 極致鍋物饗宴</h2>
    <h4>嚴選頂級食材，搭配獨門湯底，每一口都是對食材與手藝的極致追求，帶來溫潤醇厚的美味饗宴。</h4>
</div>

<p></p>

@* 巢狀導覽列 *@
<div class="container mt-5">
    <div class="row">
        <nav id="navbar-example3" class="navbar bg-light flex-column align-items-stretch p-2 h-auto col-md-1 col-lg-1 d-none d-md-block position-absolute">
            <a class="navbar-brand text-dark" href="#">老饕必吃</a>
            <nav class="nav nav-pills flex-column">
                <a class="nav-link text-dark" href="#item1">燒酒麻香鍋系列</a>
                <nav class="nav nav-pills flex-column">
                    <a class="nav-link ms-3 my-1 text-dark" href="#A1">燒酒烏骨雞鍋</a>
                    <a class="nav-link ms-3 my-1 text-dark" href="#A2">麻油煎蛋絲瓜蛤蠣鍋</a>
                </nav>
                <a class="nav-link text-dark" href="#item2">老饕精選鍋系列</a>
                <nav class="nav nav-pills flex-column">
                    <a class="nav-link ms-3 my-1 text-dark" href="#B1">剝皮辣椒烏骨雞鍋</a>
                    <a class="nav-link ms-3 my-1 text-dark" href="#B2">魷魚螺肉蒜烏骨雞鍋</a>
                </nav>
                <a class="nav-link text-dark" href="#item3">石頭爆炒鍋系列</a>
                <nav class="nav nav-pills flex-column">
                    <a class="nav-link ms-3 my-1 text-dark" href="#C1">蒜頭爆炒烏骨雞鍋</a>
                </nav>
            </nav>
        </nav>

        @* 頁面內容 *@
        <div class="col-md-9 offset-md-3">
            <div data-bs-spy="scroll" data-bs-target="#navbar-example3" data-bs-offset="10" tabindex="0">
                <h3 class="card-title mb-3" id="item1">燒酒麻香鍋系列</h3>

                @* 燒酒烏骨雞 *@
                @foreach (var menu in Model.Where(m => m.MenuId == 1))
                {
                    <div class="card mb-5 p-3 border" id="A1">
                        <div id="ca1" class="flex-container">
                            <a href="@Url.Action("Soup_Order", "Order")" class="stretched-link"></a>
                            <img src="@menu.MenuImageUrl" class="img-fluid rounded" style="width:400px; height:auto;" alt="@menu.MenuName">
                            <div class="card-body">
                                <h5 class="card-stitle ">@menu.MenuName</h5>
                                <p class="card-text">@menu.MenuDescription</p>
                            </div>
                        </div>
                    </div>
                }
                <p></p>
                @* 麻油煎蛋絲瓜蛤蠣鍋 *@
                @foreach (var menu in Model.Where(m => m.MenuId == 3))
                {
                    <div class="card mb-5 p-3 border" id="A2">
                        <div id="ca2" class="flex-container">
                            <a href="@Url.Action("Soup_Order", "Order")" class="stretched-link"></a>
                            <img src="@menu.MenuImageUrl" class="img-fluid rounded" style="width:400px; height:auto;" alt="@menu.MenuName">
                            <div class="card-body">
                                <h5 class="card-stitle">@menu.MenuName</h5>
                                <p class="card-text">@menu.MenuDescription</p>
                            </div>
                        </div>
                    </div>
                }
                <p></p>

                <h3 class="card-title mb-3" id="item2">老饕精選鍋系列</h3>

                @* 剝皮辣椒烏骨雞鍋 *@
                @foreach (var menu in Model.Where(m => m.MenuId == 2))
                {
                    <div class="card mb-5 p-3 border" id="B1">
                        <div id="ca3" class="flex-container">
                            <a href="@Url.Action("Soup_Order", "Order")" class="stretched-link"></a>
                            <img src="@menu.MenuImageUrl" class="img-fluid rounded" style="width:400px; height:auto;" alt="@menu.MenuName">
                            <div class="card-body">
                                <h5 class="card-stitle">@menu.MenuName</h5>
                                <p class="card-text">@menu.MenuDescription</p>
                            </div>
                        </div>
                    </div>
                }

                <p></p>

                @* 魷魚螺肉蒜烏骨雞鍋 *@
                @foreach (var menu in Model.Where(m => m.MenuId == 5))
                {
                    <div class="card mb-5 p-3 border" id="B2">
                        <div id="ca4" class="flex-container">
                            <a href="@Url.Action("Soup_Order", "Order")" class="stretched-link"></a>
                            <img src="@menu.MenuImageUrl" class="img-fluid rounded" style="width:400px; height:auto;" alt="@menu.MenuName">
                            <div class="card-body">
                                <h5 class="card-stitle">@menu.MenuName</h5>
                                <p class="card-text">@menu.MenuDescription</p>
                            </div>
                        </div>
                    </div>
                }

                <p></p>

                <h3 class="card-title mb-3" id="item3">石頭爆炒鍋系列</h3>

                @* 蒜頭爆炒烏骨雞鍋 *@
                @foreach (var menu in Model.Where(m => m.MenuId == 4))
                {
                    <div class="card mb-5 p-3 border" id="C1">
                        <div id="ca5" class="flex-container">
                            <a href="@Url.Action("Soup_Order", "Order")" class="stretched-link"></a>
                            <img src="@menu.MenuImageUrl" class="img-fluid rounded" style="width:400px; height:auto;" alt="@menu.MenuName">
                            <div class="card-body">
                                <h5 class="card-stitle">@menu.MenuName</h5>
                                <p class="card-text">@menu.MenuDescription</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<button onclick="topFunction()" id="upBtn" class="bi bi-arrow-up">TOP</button>

<script>
       let mybutton = document.getElementById("upBtn");

       window.onscroll = function() {scrollFunction()};

       function scrollFunction() {
           if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
               mybutton.style.display = "block";
           }
         else {
             mybutton.style.display = "none";
           }
    }

       function topFunction() {
           document.body.scrollTop = 0;
           document.documentElement.scrollTop = 0;
    }
</script>