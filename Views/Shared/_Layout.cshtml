<!DOCTYPE html>
<html lang="zh-TW">
<!-- 語言改為繁體中文 -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant</title>

    <!-- Bootstrap 5 (來自 wwwroot/lib) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- 自訂樣式 -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restaurant.styles.css" asp-append-version="true" />

    <!-- jQuery (一定要在 Tempus Dominus 之前) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Tempus Dominus Bootstrap 4 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/css/tempusdominus-bootstrap-4.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- FontAwesome 圖示庫 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">LOGO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link active" href="#">最新消息</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("StoreInformation", "StoreInformation")">門市資訊</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">菜單品鑑</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("Index_Musteat", "Menu")">老饕必吃</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index1_Mealsincluded", "Menu")">精選附食</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index2_Desserts", "Menu")">甜點熟食</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index_Order", "Order")">點餐</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Member_Login", "Customers")">會員專區</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">聯絡我們</a></li>
                    </ul>
                    <form class="d-flex">
                        <a class="btn btn-outline-success">人頭</a>
                        @if (User.Identity.IsAuthenticated)   // layout 需加入這段
                        {
                                <span class=  "navber-text me-3"> 歡迎, @User.Identity.Name</span>
                                <a class="btn btn-outline-danger" href="~/HomePage/Index">登出</a>
                        }
                        else
                        {
                                    <a class="btn btn-outline-success" href="~/Customers/Member_Login")>登入</a>						
                        } 
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Restaurant
        </div>
    </footer>

    <!-- Bootstrap 5 (來自 wwwroot/lib) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 自訂 JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- 可選的 Scripts 區域 -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

